doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='description', content='Bookshop')
    title= 'Bookshop'
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700;900&family=Open+Sans&display=swap" rel="stylesheet")
  body
    header.header-container
      a 
        .logo(href="#") Bookshop
      ul.list
        li
          a.list__item(href="#") books
        li
          a.list__item(href="#") audiobooks
        li
          a.list__item(href="#") Stationery & gifts
        li
          a.list__item(href="#") blog
      .icons 
        a 
          img.icon(href="#")(src=require('./img/user.svg'), alt='User')
        a 
          img.icon(href="#")(src=require('./img/search.svg'), alt='Search')
        a 
          .basket
            img.icon(href="#")(src=require('./img/shopBag.svg'), alt='ShopBag')
            span.basket_count
    main     
      .main_slider.fixed-container
        img.main_slider-image(src=require('./img/banner1.png'), alt='Design')
        img.main_slider-image(src=require('./img/banner2.png'), alt='Design')
        img.main_slider-image(src=require('./img/banner3.png'), alt='Design')
        .main_slider-dots
          .main_slider-dot
          .main_slider-dot
          .main_slider-dot
        a.square-violet(href="#")
          p.square-text Change
            br
            | old book
            br
            | on new
          img.icon(src=require('./img/arrow.svg'), alt='Arrow')
        a.square-pink(href="#")
          p.square-text top
            br
            | 100
            br
            | books
            br
            | 2022
          img.icon(src=require('./img/arrow.svg'), alt='Arrow')   
      include ./section.pug
      
        